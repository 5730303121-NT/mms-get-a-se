<div class="service-name py-2">
  <div class="container">
    <h2 class="py-1 my-0">Review</h2>
  </div>
</div>

<div class="container border rounded d-flex justify-content-center align-items-center my-auto p-4">
    <form action="/review/{{this.sid}}/{{this.rid}}" method="POST" class="review-form">
        <div class="form-group">
            <textarea class="form-control" rows="5" id="comment" name="comment" placeholder="Comment"></textarea>
        </div>
        <div class="form-group">
            <input id="rating" type="text" class="form-control" name="rate" placeholder="rating 1-5" required oninput="checkRate()">
        </div>
        <script language='javascript' type='text/javascript'>
                function checkRate() {
                    var rate = parseFloat(document.getElementById('rating').value);
                    if (rate<0 || rate>5) {
                        document.getElementById('rating').setCustomValidity('Please enter number 0-5');
                    } else {
                        // input is valid -- reset the error message
                        document.getElementById('rating').setCustomValidity('');
                    }
                }
            </script>
        <div class="form-group d-flex justify-content-center">
            <input type="submit" class="btn btn-danger" value="Submit">
        </div>
    </form>
</div>