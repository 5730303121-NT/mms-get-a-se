<div class="modal fade multi-step" id="signinModal" tabindex="-1" role="dialog" aria-labelledby="signinModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title step-1" data-step="1" id="signinModalLabel">Sign in with Email</h2>
        <h2 class="modal-title step-2" data-step="2" id="signinModalLabel">Password Reset</h2>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body step step-1">
        <form action="/signin" method="post">
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" required>
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" required>
          </div>
          <div class="form-group ">
            <input type="submit" class="btn btn-danger btn-full" value="Sign in">
            <center>
              <a href="#" class="forgot-pass" onclick="sendEvent('#signinModal', 2)">Forget Password?</a>
            </center>
          </div>
        </form>
      </div>
      <div class="modal-body step step-2">
        <form action="/reset" method="post">
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" required>
          </div>
          <div class="form-group ">
            <input type="submit" class="btn btn-danger btn-full" value="Send Reset Link">
            <center>
              <a href="#" class="forgot-pass" onclick="sendEvent('#signinModal', 1)">&lt; Back to Sign in</a>
            </center>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>